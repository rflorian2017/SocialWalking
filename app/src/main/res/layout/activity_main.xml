<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.socialwalking.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wiggs__walk_3business"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/upperTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where? Timisoara!\nWhen? Before and after work!\n"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/lowerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walk together to work!\nTime pases easily!"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"/>

</RelativeLayout>
